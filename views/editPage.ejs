    <!-- <form method="post" action="/admin/pages/<%= item.Page_Url%>?_method=put"> -->
      <form method="post" action="/admin/pages/edit-pages/<%= item.Page_Url%>?_method=put" enctype="multipart/form-data">


      <div class="mb-3 mt-3 row g-9 align-items-center"> 
        <div class="col col-lg-2"><label class="form-label">URL</label></div>
        <div class="col"><input type="text" name ="Page_Url" class="form-control" value=" <%= item.Page_Url%>" placeholder="Page Url"></div>
      </div>

      <div class="mb-3 mt-3 row g-9 align-items-center">           
          <div class="col col-lg-2"><label class="form-label">Meta Description</label></div>
          <div class="col"><input type="text" name ="Page_Meta_Description" class="form-control" value="<%= item.Page_Meta_Description %>" placeholder="Page Meta Description"></div>
      </div>

      <div class="mb-3 mt-3 row g-9 align-items-center">
        <div class="col col-lg-2"><label class="form-label">Meta Keyword</label></div>
        <div class="col"><input type="text" name ="Page_Meta_Keyword" class="form-control" value="<%= item.Page_Meta_Keyword %>" placeholder="Page Meta Keyword"></div>
      </div>
      
      <div class="mb-3 mt-3 row g-9 align-items-center">
        <div class="col col-lg-2"><label class="form-label">h1</label></div>
        <div class="col"><input type="text" name ="Page_Heading" class="form-control" value="<%= item.Page_Heading %>" placeholder="Page Heading"></div>
      </div>
      
      <div class="mb-3 mt-3 row g-9 align-items-center"> 
        <div class="col col-lg-2"><label class="form-label">Photo</label></div>
        <div class="col"><input type="file" name="Page_Photo" class="form-control"></div>
      </div>
      
      <div class="mb-3 mt-3 row g-9 align-items-center">
        <div class="col col-lg-2"><label class="form-label">Page Details</label></div>
        <div class="col"><textarea rows="10" class="editor form-control Page_Details" name="Page_Details"  placeholder="Page Details"><%= item ? item.Page_Details : '' %></textarea></div>
      </div>

      <div class="mb-5 mt-3 align-items-center text-center"> 
           <button type="submit" class="btn btn-primary">Submit</button>
      </div>
